{% extends '@nucleus/partials/particle.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ url('gantry-theme://css/vex/vex.css') }}" type="text/css" />
  <link rel="stylesheet" href="{{ url('gantry-theme://css/vex/vex-theme-default.css') }}" type="text/css" />
  <link rel="stylesheet" href="{{ url('gantry-theme://css/vex/vex-theme-os.css') }}" type="text/css" />
  <link rel="stylesheet" href="{{ url('gantry-theme://css/vex/vex-theme-plain.css') }}" type="text/css" />
  <link rel="stylesheet" href="{{ url('gantry-theme://css/vex/vex-theme-wireframe.css') }}" type="text/css" />
  <link rel="stylesheet" href="{{ url('gantry-theme://css/vex/vex-theme-flat-attack.css') }}" type="text/css" />
  <link rel="stylesheet" href="{{ url('gantry-theme://css/vex/vex-theme-top.css') }}" type="text/css" />
