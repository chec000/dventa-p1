{% endblock %}

{% block javascript %}
  <script src="{{ url('gantry-theme://js/vex/vex.combined.min.js') }}"></script>
{% endblock %}

{% block javascript_footer %}
<script>
  vex.dialog.alert({
              message: '{{particle.message}}',
              input: ['<img src="{{url(particle.image)}}">'].join(''),
              className: 'vex-theme-wireframe'
          })
</script>
{% endblock %}
