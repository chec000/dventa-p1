{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
    {% assets in 'head' %}
        {% if particle.enabled %}
        	{% if particle.enabled_animatecss %}
         <link rel="stylesheet" href="{{ url('gantry-theme://css/animate.min.css') }}" type="text/css"/>
        	{% endif %}
        {% endif %}
    {% endassets -%}

{% endblock %}

{% block javascript_footer %}
	{% if particle.enabled %}
	  {% if particle.enabled_wowjs %}
		{{ parent() }}
		<script src="{{ url('gantry-theme://js/wow.min.js') }}" type="text/javascript"></script>
		<script type="text/javascript">
			wow = new WOW({
			mobile: {{ particle.mobile|default("false")|e }},
			offset: {{ particle.offset|default("200")|e }} });
			wow.init();
		</script>
	  {% endif %}
	{% endif %}
{% endblock %}