{% extends '@nucleus/partials/particle.html.twig' %}


{% block stylesheets %}
  <link rel="stylesheet" href="{{ url('gantry-theme://css/jquery.mb.YTPlayer.min.css') }}" media="all" type="text/css" />
{% endblock %}

{% block javascript %}
  {% if particle.jquery  %}
    <script src="{{ url('http://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js') }}"></script>
  {% endif %}
  <script src="{{ url('gantry-theme://js/jquery.mb.YTPlayer.js') }}"></script>
{% endblock %}

{% if particle.controls %}
{%   set viewControls = "true" %}
{% else %}
{%   set viewControls = "false" %}
{% endif  %}

{% if particle.loop %}
{%   set Loop = "true" %}
{% else %}
{%   set Loop = "false" %}
{% endif  %}

{% block javascript_footer %}
<script>
  $("body").append('<div id="bgVideo" class="player" data-property="{videoURL:\'{{particle.urlVideo}}\',containment:\'body\',autoPlay:true,{% if particle.mute %} mute:true,{% endif %} startAt:{{particle.startAt}}, opacity:{{particle.opacity}}, showControls:{{viewControls}}, loop:{{Loop}},  }"></div>' );
  $(function(){
    $("#bgVideo").mb_YTPlayer();
  });
</script>
{% endblock %}
