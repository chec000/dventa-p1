<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Adbox - Helpdesk</name>
    <author>Adventa</author>
    <version>1.0.0</version>
    <description>Genera tickets de incidencia para el help desk service de JIRA, modulo que depende de la tabla core_configs y del componente com_core_configs</description>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
            </sql>
        </install>
    <files>
        <filename>mod_helpdesk.xml</filename>
        <filename module="mod_helpdesk">mod_helpdesk.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <folder>sql</folder>
    </files>
    <languages folder="languages">
            
            <language tag="en-GB">en-GB/en-GB.mod_helpdesk.ini</language>
            <language tag="en-GB">en-GB/en-GB.mod_helpdesk.sys.ini</language>
            <language tag="es-ES">es-ES/es-ES.mod_helpdesk.ini</language>
            <language tag="es-ES">es-ES/es-ES.mod_helpdesk.sys.ini</language>
        </languages>
</extension>