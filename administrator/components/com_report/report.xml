<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_report</name>
    <creationDate>December 2017</creationDate>
    <copyright></copyright>
    <license>Licencia Pública General GNU versión 2 o posterior. Consulte LICENSE.txt</license>
    <author>Adventa</author>
    <authorEmail>othon.parra@adventa.mx</authorEmail>
    <authorUrl>http://www.adventa.mx</authorUrl>
    <version>1.0.0</version>
    <description>Componente para descargar reportes de usuarios y canjes.</description>
    
    
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <update> <!-- Runs on update -->
        <sql>
            <file driver="mysql" charset="utf8">sql/update.mysql.utf8.sql</file>
        </sql>
    </update>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>report.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <media destination="com_report" folder="media">
        <folder>js</folder>
        <folder>css</folder>
    </media>
    <languages folder="site/languages">
        
			<language tag="es-ES">es-ES/es-ES.com_report.ini</language>
    </languages>
    <administration>
        <menu img="media/com_report/images/s_com_report.png" >COM_REPORT</menu>
        <submenu>
            
			<menu link="option=com_report&amp;view=userfields" view="userfields" img="media/com_report/images/s_userfields.png" alt="Report/Userfields">COM_REPORT_TITLE_USERFIELDS</menu>
			<menu link="option=com_report&amp;view=reportfields" view="reportfields" img="media/com_report/images/s_userfields.png" alt="Report/Reportfields">COM_REPORT_TITLE_REPORTFIELDS</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>report.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator/languages">
            
			<language tag="es-ES">es-ES/es-ES.com_report.ini</language>
			<language tag="es-ES">es-ES/es-ES.com_report.sys.ini</language>
        </languages>
    </administration>
    <config>
        <fields name="params">
            <fieldset name="component">
                <field name="save_history" default="0" />
            </fieldset>
        </fields>
    </config>
    <plugins>
        <plugin group="search" plugin="report"/>
    </plugins>
    
</extension>
