<?xml version="1.0" encoding="UTF-8"?>
<extension version="3.0" type="plugin" group="system" method="upgrade">
    <name>System - Checkout Override</name>
    <author>Martin Mora Franco</author>
    <creationDate>Agosto 2018</creationDate>
    <copyright>Copyright (C) 2018 Adventa. All rights reserved.</copyright>
    <license></license>
    <authorEmail>mmora@ant.com.mx</authorEmail>
    <authorUrl>http://adventa.mx</authorUrl>
    <version>1.0.1</version>
    <description>Plugin para realizar personalizaciones al componente Com_checkout</description>
    <files>
        <filename plugin="checkoutoverride">checkoutoverride.php</filename>
        <filename>index.html</filename>
        <folder>views</folder>
        <folder>sql</folder>
        <folder>models</folder>
        <folder>language</folder>
        <folder>assets</folder>
    </files>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
</extension>
